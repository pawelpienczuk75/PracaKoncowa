@model RentRoom.ViewModels.LogInViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>






<hr />
<div class="row">
    <div class="divusermanager">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="register-form" />
                <span asp-validation-for="Login" class="text-danger"></span>
                <p></p>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="register-form" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <p></p>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                    <p></p>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
                <button type="button" class="btn btn-danger">Danger</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
    <p>@Html.ActionLink("Opis Sali", "AddRoom", "RoomDescription")</p>
</div>
