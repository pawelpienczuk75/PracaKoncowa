@model RentRoom.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>

<h2>Rejestracja</h2>

<hr />
<div class="row">
    <div class="divusermanager">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="register-form" />
                <span asp-validation-for="Login" class="text-danger"></span>
                <p></p>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="register-form" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <p></p>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="register-form" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <p></p>
            </div>
            <div class="form-group">
                <label asp-for="RepeatPassword" class="control-label"></label>
                <input asp-for="RepeatPassword" class="register-form" />
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                <p></p>
            </div>
            <div class="form-group">
                <input type="submit" value="Rejestracja" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>