@model IEnumerable<RentRoom.ViewModels.ListRentsViewModel>

@{
    ViewData["Title"] = "ListRents";
}

<nav class="navbar navbar-expand-sm navbar-light" style="background-color: #e3f2fd">
    @Html.ActionLink("Home", "Index", "Account")
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-link active">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Rezerwacja Sali", "Index", "Rent")

                }
            </li>
            
        </ul>

        @if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Logout", "LogOut", "Account")
        }

        @if (User.Identity.IsAuthenticated)
        {
            <div class="magin-right">Użytkownik Zalogowany.</div>
        }
        else
        {
            <div class="magin-right">Użytkownik Niezalogowany.</div>
        }

    </div>
</nav>

<table class="table table table-striped">
    <thead>
    <tr>
        <th class="col-md-2" >
            <label>Nazwa Sali</label>
        </th>
        <th class="col-md-2">
            <label>Data</label>
        </th>
        <th class="col-md-2">
            <label>Godzina</label>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td class="col-md-2">
            @Html.DisplayFor(modelItem => item.NameOfRoom)
        </td>
        <td class="col-md-2">
            @Html.DisplayFor(modelItem => item.DateOfEvent)
        </td>
        <td class="col-md-2">
            @Html.DisplayFor(modelItem => item.HourEvent)
        </td>
        <td>

            <a class="col-md-2" asp-action="Delete" asp-route-id="@item.Id" >Rezygnacja</a>
        </td>
    </tr>
}
    </tbody>
</table>
